doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='A collection of thoughts, tips, and tirades')
    meta(name='author', content='Bobby Brennan')
    title Bobby Brennan's Blog
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/freelancer.css', rel='stylesheet')
    link(href='/css/index.css', rel='stylesheet')
    link(rel="stylesheet" href="/bower/fontawesome/css/font-awesome.min.css")
    link(href='http://fonts.googleapis.com/css?family=Montserrat:400,700', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic', rel='stylesheet', type='text/css')
    link(href='/css/blog.css', rel='stylesheet')
    script(src="/js/google-analytics.js")
  body
    .container
      .row
        .col-xs-12.col-lg-10.col-lg-offset-1.heading
          h1 Bobby Brennan's Blog
          p
            span.pull-left A collection of thoughts, tips, and tirades
            a.pull-right(href="/blog/rss")
              span.fa.fa-rss
              span &nbsp;&nbsp;
              span RSS Feed
            .clearfix
        .col-xs-12.col-lg-10.col-lg-offset-1
          for article in articles
            .row
              .col-xs-12
                h3
                  a(href='/blog/' + article.id)= article.title
                p.small= article.dateString
                p= article.description
                hr
